{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "eventive/film-details",
    "version": "0.1.0",
    "title": "Eventive Film Details",
    "category": "eventive",
    "description": "Display detailed information about an Eventive film including events and showtimes.",
    "textdomain": "eventive",
    "attributes": {
        "filmId": {
            "type": "string",
            "default": ""
        },
        "showEvents": {
            "type": "boolean",
            "default": true
        },
        "showDetails": {
            "type": "boolean",
            "default": true
        },
        "showTags": {
            "type": "boolean",
            "default": true
        },
        "excludeVirtual": {
            "type": "boolean",
            "default": true
        }
    },
    "supports": {
        "html": false,
        "align": true
    },
    "viewScript": "file:./view.js",
    "editorScript": "file:./index.js",
    "editorStyle": "file:./index.css",
    "style": "file:./style-index.css"
}
